@using DbManager;
@model IEnumerable<DeviceType>
@using WebSklad.App_code
@{
    ViewData["Title"] = "DeviceTypes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!doctype html>
<html>
<head>
    <title>Виды оборудования</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width">
</head>
<body>
    <h3>Виды оборудования</h3>
    <form action="/Device/AddDeviceType" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#DeviceTypesTable" id="form0" method="post">

        <div class="row">

            <div class="col-md-6 mb-3">

                <label for="name">Наименование оборудования</label>
                <input id="name" type="text" name="Name" class="form-control" autocomplete="off" required />

            </div>

            <div class="col-md-6 mb-3">
                <label for="Select1">Тип оборудования</label>
                <select id="Select1" class="form-control" name="Type">
                    @SelectHelper.CreateSelect(Html, new List<string>() { "ПУ", "УСПД", "PLC модем", "Контроллер" })
                </select>
            </div>

        </div>

        <div class="row">

            <div class="col-md-12 mb-3">
                <label for="desc">Описание</label>
                <input id="desc" type="text" name="Description" class="form-control" autocomplete="off" />
            </div>

        </div>

        <div class="row">

            <div class="col-md-6 mb-3">
                <label for="Select2">Номинальный ток</label>
                <select id="Select2" class="form-control" name="Inom">
                    @SelectHelper.CreateSelect(Html, new List<string>() { "---", "5(10)", "5(60)", "5(100)" })
                </select>
            </div>

            <div class="col-md-6 mb-3">
                <label for="Select3">Номинальное напряжение</label>
                <select id="Select3" class="form-control" name="Unom">
                    @SelectHelper.CreateSelect(Html, new List<string>() { "---", "230", "3x230/400" })
                </select>
            </div>

        </div>

        <div class="row">

            <div class="col-md-6 mb-3">
                <label for="Select4">Класс точности</label>
                <select id="Select4" class="form-control" name="AccuracyClass">
                    @SelectHelper.CreateSelect(Html, new List<string>() { "---", "0,5s/0,5", "1/1", "1/2" })
                </select>
            </div>

            <div class="col-md-6 mb-3">
                <label for="Select5">Тип измеряемой энергии</label>
                <select id="Select5" class="form-control" name="EnergyType">
                    @SelectHelper.CreateSelect(Html, new List<string>() { "---", "А", "А/Р" })
                </select>
            </div>

        </div>

        <div class="row">

            <div class="col-md-4 mb-3">
                <label for="interval">Межпроверочный интервал</label>
                <input id="interval" type="text" name="TestInterval" class="form-control" autocomplete="off" />
            </div>

            <div class="col-md-4 mb-3">
                <label for="code">Код модели</label>
                <input id="code" type="text" name="ModelCode" class="form-control" autocomplete="off" required />
            </div>
            <div class="col-md-4 mb-3">
                <label for="Price">Цена за шт., руб.</label>
                <input type="text" id="Price" class="form-control" name="Price" required pattern="\d+(,\d{1,10})?" />
            </div>

        </div>

        <div class="text-right">
            <input id="post" type="submit" value="Добавить" class="btn btn-primary" />
        </div>

    </form>
    <h6>&#8195</h6>
    <div id="DeviceTypesTable">
        @Html.Partial("_DeviceTypesTable")
    </div>
</body>
</html>

