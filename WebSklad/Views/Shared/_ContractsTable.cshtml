@using DbManager;
@model IEnumerable<Contract>

<div id="contractInnerTable">
    <h6 style="color:#ff0000">@ViewData["error"]</h6>
    <table class="table table-sm table-bordered table-hover">
        <thead>
            <tr style="background:#EEF3F6">
                <th>#</th>
                <th>Наименование</th>
                <th>Описание</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @{
                int n = 0;
                foreach (var item in Model)
                {
                    n++;

                    <tr>
                        <td>@n</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>

                        <td>
                            <form action="/Home/DeleteContract" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#contractInnerTable" id="form0" method="post">
                                <input type="hidden" name="Id" value="@item.Id" />
                                <div class="text-center">
                                    <input id="Submit1" type="submit" value="Удалить" class="btn btn-danger" />
                                </div>
                            </form>
                        </td>
                    </tr>

                }
            }
        </tbody>

    </table>
</div>